body
  background rgb(0, 58, 87)
  font-family 'roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif

.admin-header
  width 100%
  color white
  padding-top 30px
  padding-bottom 10px
  text-align center



.admin-table

  table
    margin 0 auto
    border-collapse collapse

    th
      text-transform uppercase
      width 100px
      background rgb(11, 33, 81)//rgba(0, 0, 0, 1)
      padding 10px
      color white
      font-size 14px
      //border 1px solid white

    tr
      &:nth-child(2n)
        background rgba(255, 255, 255, 0.6)
      &:nth-child(2n+1)
        background rgba(255, 255, 255, 0.7)
      &:nth-child(1)
        background transparent
    td
      width 100px

      text-align center
      padding 5px
      color rgb(0, 58, 87)
      font-size 12px
      //border 1px solid white


      input[type = 'submit']
       background rgb(0, 58, 87)
       color white
       padding 5px
       border 0px
       &:hover
         background rgba(0, 58, 87, 0.8)
         cursor pointer

      input[type = 'text']
        width 90px
        text-align center
        //background rgb(0, 58, 87)
        color rgb(0, 58, 87)
        padding 5px
        border 0px

      select
        background rgba(255, 255, 255, 0.5)
        padding 5px
        border 0px


.none
  display none
footer
  display none
