@import 'nib/vendor'
vendor-prefixes = ms o moz webkit
body
  margin 0px
  padding 0px
  font-family 'roboto-black', 'Helvetica Neue', Helvetica, Arial, sans-serif
  background url('../images/backgroundbn.jpg') no-repeat fixed center rgba(61, 61, 61,0.8)//rgb(241, 83, 0)
  background-size cover
  //-webkit-filter blur(25px) brightness(0.5)
  header
    background rgb(61, 61, 61)//rgb(250, 198, 19)//rgb(255, 157, 0)//rgb(241, 83, 0)//rgb(54, 54, 54)
    font-family "roboto-thin","Helvetica Neue",Helvetica,Arial,sans-serif
    position fixed
    width 170px
    padding 20px
    padding-top 0px
    padding-bottom 0px
    right 0px
    border-radius 0px 0px 0px 5px
    ul
      list-style none
      float right
      li
        font-size 14px
        text-transform uppercase
        display block
        text-align center
        width 100%
        height 40px
        font-family "roboto-regular","Helvetica Neue",Helvetica,Arial,sans-serif
        padding-top 11px
        color white//rgb(250, 198, 19)//rgb(147, 32, 21)
        text-decoration none
        &:hover
          color rgb(250, 198, 19)
        &:hover > ul
          display block
        ul
          display none
          position absolute
          z-index 2
          width 130px
          background rgba(61, 61, 61, 0.9)//rgba(250, 198, 19,0.8)
          border-radius 5px
          padding 0
          margin 0
          li
            width 100%
            font-size 14px
            a
              text-transform uppercase
              display block
              text-align center
              width 100%
              height 40px
              font-family "roboto-regular","Helvetica Neue",Helvetica,Arial,sans-serif
              padding-top 11px
              color white//rgb(250, 198, 19)//rgb(147, 32, 21)
              text-decoration none
              &:hover
                color rgb(250, 198, 19)
        
  ::-webkit-scrollbar
    width 0px
  ::-moz-scrollbar
    width 0px
  nav
    position fixed
    overflow-y: auto;
    width 300px
    height 100%
    background rgba(61, 61, 61,0.8)//transparent //rgb(255, 157, 0)//rgb(241, 83, 0)//rgb(54, 54, 54)
    padding-top 25px

    ul
      
      list-style none
      float right
      .active
        border-right 4px solid rgb(250, 198, 19)
      li
        text-transform uppercase
        font-size 18px
        width 160px
        border-right 4px solid rgba(61, 61, 61, 0.0)
        .first
          color rgb(250, 198, 19)
          border-top 0px
        &:hover > ul
          display block
        a
          text-transform uppercase
          display block
          text-align right
          width 110px
          height 40px
          font-family "roboto-regular","Helvetica Neue",Helvetica,Arial,sans-serif
          border-top 1px solid #A3A3A3
          padding-top 11px
          color white//rgb(250, 198, 19)//rgb(147, 32, 21)
          text-decoration none
          &:hover
            color rgb(250, 198, 19)
        ul
          //display none
          list-style none
          position absolute
          //left 0px
          z-index 2
          //background blue
          right 0px
          padding 0px
          margin 0px
          li
            //width 100%
            /*padding 0px
            margin 0px*/
            /*width 0px
            height 0px*/
            //border 0px
            .second
              border-top 0px
            a
              text-align center
              display block
              font-size 15px
              border 0px
              height 17px
              
    .ima-container
      top 280px
      width 100%
      height 200px
      position relative
      .ima
        position absolute
        right 44px
        //float right
        height 200px
        width 200px
    .tit-container
      top 250px
      width 100%
      position relative
      font-family "roboto-light", "roboto-regular","Helvetica Neue",Helvetica,Arial,sans-serif
      h1, h2, h3, h4
        position absolute
        left 54px
        right 54px
        text-align center
        
      h1
        //text-transform uppercase
        font-size 30px
        top 0px
        color white
        //-webkit-text-stroke 1px black
        &:first-letter
          font-family serif
          font-size 1.8em
          color black
        .iso
          color black//rgb(54, 93, 44)
        .metrics
          color rgb(54, 93, 44)
          //-webkit-text-stroke 1px black
      h4
        text-transform uppercase
        top 70px
        color white//
      h3
        text-transform uppercase
        top 95px
        color rgb(255, 197, 0)
      h2
        text-transform uppercase
        top 120px
        color rgb(23, 52, 20)//rgb(255, 157, 0)
      
  .aside
    float left
    margin-top 70px
    margin-right 10px
    width 20%
    height 380px
    background rgba(255, 157, 0, 0.4)//rgb(241, 83, 0)//rgb(54, 54, 54)
  .content
    float left
    margin-top 70px
    width 75%
    height 380px
    background rgb(255, 157, 0)//rgb(241, 83, 0)//rgb(54, 54, 54)
  footer
    position fixed
    left 0
    bottom 0
    width 100%
    height 50px
    background rgb(147, 32, 21)//rgb(241, 83, 0)//rgb(54, 54, 54)

.can
  margin 0 auto
  width 300px
  canvas
    background rgba(255, 255, 255, 0.3)
  
@font-face
  font-family "roboto-black"
  src url('roboto/Roboto-Black.ttf')
  
@font-face
  font-family "roboto-regular"
  src url('roboto/Roboto-Regular.ttf')
  
  //roboto-light
@font-face
  font-family "roboto-light"
  src url('roboto/Roboto-Light.ttf')
  
@font-face
  font-family "roboto-thin"
  src url('roboto/Roboto-Thin.ttf')
  
@font-face 
  font-family 'aDown'
  src url('aDown/icomoon.eot?i3wfqg')
  src url('aDown/icomoon.eot?i3wfqg#iefix') format('embedded-opentype'), url('aDown/icomoon.ttf?i3wfqg') format('truetype'), url('aDown/icomoon.woff?i3wfqg') format('woff'), url('aDown/icomoon.svg?i3wfqg#icomoon') format('svg')
  font-weight normal
  font-style normal
@keyframes retam {
  0%{margin-top 0px;font-size: 14px}
  50%{margin-top -6px;font-size: 20px}
  100%{margin-top 0px;font-size: 14px}
}