@import 'nib/vendor'
vendor-prefixes = ms o moz webkit
body
  //background rgb(241, 83, 0)
  background url('../images/backgroundbn.jpg') no-repeat fixed center rgb(0, 0, 0)//url('../images/background.jpg') no-repeat fixed center rgb(241, 83, 0)
  background-size cover
  .loading
    position fixed
    left 0
    top 0
    width 100%
    height 100%
    z-index 9999
    background url('../images/wloader.svg') 50% 50% no-repeat rgba(0,0,0,0.5)//rgb(241, 83, 0)
  .container
    text-align center
    font-family "roboto-regular","Helvetica Neue",Helvetica,Arial,sans-serif
    color white //#3B3B3B
    height 400px
    width 300px
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    background rgba(255, 255, 255,0.2)//rgba(130, 17, 0, 0.2)
    box-shadow 0px 0px 5px rgb(61, 61, 61)//rgb(130, 17, 0)
    .form-header
      color #0C5537
      text-shadow 0px 0px 10px #fff//#821100
      padding-top 1em
    
    .form-alert
      padding 0px
      color #E03626
      font-size 10px
    .form-input
      padding 15px
      position relative
      height 50px
      label
        //display fixed//block
        position absolute
        top 35%
        left 17%
        transform translate(-50%, 0%)
        z-index 3
        
        text-align center
        margin-bottom 10px
      .usy
        &:before
          font-family 'session'
          content '\e900'
          font-size 30px
          color #0C5537//#821100
          display inline-block
      .pass
        &:before
          font-family 'session'
          content '\e901'
          font-size 30px
          color #0C5537//#821100
          display inline-block
      input
        //display fixed
        position absolute
        left 50%
        transform translate(-50%, 0%)
        z-index 2
        
        border 1px solid #0C5537//#821100
        width 60%
        font-size 20px
        //padding 20px
        padding-right 20px
        padding-left 20%
        padding-bottom 15px
        padding-top 20px
        border-radius 5px
        color #0C5537//#821100
        &:focus
          outline none
          border 1px solid #0C5537//#821100
          box-shadow 0px 0px 5px #fff//#821100
    .form-button
      padding 20px
      padding-top 10px
      margin-bottom 15px
      button
        
        font-size 16px
        color #0C5537//white
        width 100%
        background rgba(255, 255, 255,0.4)//transparent
        border 1px solid white//orange
        border-radius 5px//50%
        box-shadow 0px 0px 5px #353535 //#821100
        padding 20px
        animation-name change
        animation-duration 2s
        animation-iteration-count: infinite;
        &:focus
          outline none

