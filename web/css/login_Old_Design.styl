@media only screen and (max-height 400px)
  body
    .container
      top 0%
      transform translate(-50%, 0%)
    
@media only screen and (max-width 992px)
  body
    background url('../images/backgroundbn.jpg') no-repeat fixed center rgb(0, 0, 0)//url('../images/background.jpg') no-repeat fixed center
    background-size cover
  
@media only screen and (max-width 768px)
  body
    background url('../images/backgroundbn.jpg') no-repeat fixed center rgb(0, 0, 0)//url('../images/background.jpg') no-repeat fixed center
    background-size auto
    .container
      .form-input
        padding 15px
          
      .form-button
        button
          width 100px
          height 100px
          border-radius 50%
  
@media only screen and (max-width 480px)
  body
    background url('../images/backgroundbn.jpg') no-repeat fixed center rgb(0, 0, 0)//url('../images/background.jpg') no-repeat fixed center
    background-size auto
    
@media only screen and (max-width 300px)
  body
    background url('../images/backgroundbn.jpg') no-repeat fixed center rgb(0, 0, 0)//url('../images/background.jpg') no-repeat fixed center
    background-size auto  
    .container
      width 100%

@font-face
  font-family "roboto-regular"
  src url('roboto/Roboto-Regular.ttf')
  
@font-face 
  font-family 'session'
  src url('session/icomoon.eot?i3wfqg')
  src url('session/icomoon.eot?i3wfqg#iefix') format('embedded-opentype'), url('session/icomoon.ttf?i3wfqg') format('truetype'), url('session/icomoon.woff?i3wfqg') format('woff'), url('session/icomoon.svg?i3wfqg#icomoon') format('svg')
  font-weight normal
  font-style normal
  
@keyframes change{
  0%{box-shadow: 0px 0px 5px #353535/*#821100 */}
  50%{box-shadow: 0px 0px 20px #fff/*#821100 */}
  100%{box-shadow: 0px 0px 5px #353535/*#821100*/}
}